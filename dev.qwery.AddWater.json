{
	"id" : "dev.qwery.AddWater",
	"runtime" : "org.gnome.Platform",
	"runtime-version" : "46",
	"sdk" : "org.gnome.Sdk",
	"command" : "addwater",
	"finish-args" : [
		"--share=network",
		"--share=ipc",
		"--socket=fallback-x11",
		"--device=dri",
		"--socket=wayland",

		"--filesystem=~/.mozilla/firefox/:rw",
		"--filesystem=~/.var/app/org.mozilla.Thunderbird/.thunderbird/:rw",
		"--filesystem=~/.var/app/org.mozilla.Firefox/.mozilla/firefox/:rw"
	],
	"cleanup" : [
		"/include",
		"/lib/pkgconfig",
		"/man",
		"/share/doc",
		"/share/gtk-doc",
		"/share/man",
		"/share/pkgconfig",
		"*.la",
		"*.a"
	],
	"modules" : [
	{
		"name" : "python-requests",
		"buildsystem" : "simple",
		"build-options" : {
			"build-args": [
				"--share=network"
			]
		},
		"build-commands" : [
			"pip3 install --verbose --prefix=${FLATPAK_DEST} \"requests\" --no-build-isolation"
		]
	},
	{
		    "name" : "addwater",
		    "builddir" : true,
		    "buildsystem" : "meson",
		    "sources" : [
			{
			    "type" : "git",
			    "url" : "file:///var/home/qwery/Projects/dev/gnome/fireaddwater"
			}
		]
	}
	]
}
