<?xml version="1.0" encoding="UTF-8"?>
<interface>
<requires lib="gtk" version="4.0"/>
<requires lib="Adw" version="1.0"/>
	<template class="AddwaterWindow" parent="AdwApplicationWindow">
		<property name="default-width">500</property>
		<property name="default-height">700</property>
		<property name="resizable">False</property>
		<property name="title">Add Water</property>
		<style>
			<class name="devel"/>
		</style>
		<property name="content">

		<object class="AdwToastOverlay" id="toast_overlay">
			<child>
				<object class="AdwToolbarView">

						<!-- HEADER BAR -->
					<child type="top">
						<object class="AdwHeaderBar" id="header_bar">
							<property name="title-widget">
								<object class="AdwViewSwitcher" id="main_page_switcher">
									<property name="stack">main_view_stack</property>
									<property name="policy">wide</property>
								</object>
							</property>
							<child type="end">
								<object class="GtkMenuButton">
									<property name="primary">True</property>
									<property name="icon-name">open-menu-symbolic</property>
									<property name="tooltip-text" translatable="yes">Menu</property>
									<property name="menu-model">primary_menu</property>
								</object>
							</child>
						</object>
					</child>

					<!-- CHANGE CONFIRMATION BAR -->
					<child type="bottom">
						<!-- TODO build "change transaction toolbar" later -->
						<!-- only show this bar when the user has queued some changes -->
						<!-- build these button actions in code -->
						<object class="GtkActionBar" id="change_confirm_bar">
							<property name="visible">True</property>
							<child type="start">
								<object class="GtkLabel">
									<property name="label">Confirm your changes?</property>
									<style>
										<class name="heading"/>
									</style>
								</object>
							</child>
							<child type="start">
								<object class="GtkButton">
									<property name="icon-name">info-outline-symbolic</property>
									<property name="tooltip-text">Review Changes</property>
									<property name="action-name">win.open-change-summary</property>
								</object>
							</child>

							<child type="end">
								<object class="GtkButton">
									<property name="icon-name">cross-small-symbolic</property>
									<property name="tooltip-text">Cancel</property>
									<property name="action-name">app.clear-changes</property>
									<style>
										<class name="raised"/>
									</style>
								</object>
							</child>
							<child type="end">
								<object class="GtkButton">
									<property name="icon-name">checkmark-symbolic</property>
									<property name="tooltip-text">Apply</property>
									<property name="action-name">app.apply-changes</property>
									<style>
										<class name="suggested-action"/>
									</style>
								</object>
							</child>

							<style>
								<class name="toolbar"/>
							</style>
						</object>

					</child>

				<!-- WINDOW CONTENT -->
				<property name="content">
					<object class="AdwViewStack" id="main_view_stack">
						<child>
							<object class="AdwViewStackPage">
								<property name="name">Firefox</property>
								<property name="title">Firefox</property>
								<property name="icon-name">globe-symbolic</property>
								<property name="child">
									<object class="FirefoxPage" id="firefox_page"/>
								</property>
							</object>
						</child>
						<!-- TODO Make Thunderbird page after finishing firefox -->
						<!-- <child> -->
						<!-- 	<object class="AdwViewStackPage"> -->
						<!-- 		<property name="name">Thunderbird</property> -->
						<!-- 		<property name="title">Thunderbird</property> -->
						<!-- 		<property name="icon-name">mail-symbolic</property> -->
									<!-- TODO Make Thunderbird page -->
						<!-- 		<property name="child"> -->
						<!-- 			<object class="ThunderbirdPage" id="thunderbird_page"/> -->
						<!-- 		</property> -->
						<!-- 	</object> -->
						<!-- </child> -->
					</object>
				</property>

				</object>
			</child>
		</object>

		</property>
	</template>

	<menu id="primary_menu">
		<section>
			<item>
				<attribute name="label" translatable="yes">_TODO Preferences</attribute>
				<attribute name="action">app.preferences</attribute>
			</item>
			<item>
				<attribute name="label" translatable="yes">_Keyboard Shortcuts</attribute>
				<attribute name="action">win.show-help-overlay</attribute>
			</item>
			<item>
				<attribute name="label" translatable="yes">_About AddWater</attribute>
				<attribute name="action">app.about</attribute>
			</item>
		</section>
	</menu>
</interface>

