<?xml version="1.0" encoding="UTF-8"?>
<interface>
	<template class="AddWaterPreferences" parent="AdwPreferencesDialog">
		<property name="content-width">450</property>
		<property name="content-height">450</property>
		<!-- FIXME Make this fit into the main window attached like About or  -->
		<child>
			<object class="AdwPreferencesPage" id="firefox_pref_page">
				<property name="title">Firefox</property>
				<property name="icon-name">globe-symbolic</property>
				<child>
					<object class="AdwPreferencesGroup">
						<property name="title">Firefox</property>

						<child>
							<object class="AdwExpanderRow">
								<!-- TODO make the logic for this -->
								<property name="title">Use a Custom Profile Path</property>
								<property name="subtitle">Specify the path to your Firefox profile directory, and override the path Add Water automatically finds</property>
								<property name="expanded">True</property>
								<property name="show-enable-switch">True</property>
								<child>
									<object class="AdwActionRow" id="custom_firefox_path">
										<property name="title">Profiles Location</property>
										<child type="suffix">
											<object class="GtkButton">
												<property name="icon-name">folder-symbolic</property>
												<property name="valign">center</property>
												<property name="action-name">pref.set-firefox-path</property>
												<style>
													<class name="flat"/>
												</style>
											</object>
										</child>
										<style>
											<class name="property"/>
										</style>
									</object>
								</child>
							</object>
						</child>
					</object>
				</child>
				<child>
					<object class="AdwPreferencesGroup">
						<property name="title">Reset Add Water</property>
						<property name="description">This will uninstall the theme from all Firefox Profiles and reset the app to its default state</property>
						<!-- TODO Make the logic for this button -->
						<child>
							<object class="GtkListBox">
							 	<child>
									<object class="AdwPreferencesRow">
										<property name="title">Remove Water</property>
										<property name="activatable">true</property>
										<property name="selectable">false</property>
										<child>
											<object class="GtkBox">
												<property name="spacing">6</property>
												<property name="valign">center</property>
												<property name="halign">center</property>
												<child>
													<object class="GtkLabel">
														<property name="label">Remove Water</property>
														<style>
															<class name="heading"/>
														</style>
													</object>
												</child>
												<style>
													<class name="header"/>
												</style>
											</object>
										</child>
										<style>
											<class name="error"/>
										</style>
									</object>
								</child>
								<style>
									<class name="boxed-list"/>
								</style>
							</object>
						</child>
					</object>
				</child>
			</object>
		</child>
	</template>
</interface>
